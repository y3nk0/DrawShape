<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android1:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/surface"
    android1:orientation="vertical" >

    <TextView
        android1:layout_width="fill_parent"
        android1:layout_height="wrap_content"
        android1:text="Draw the shape..."
        android1:textColor="#FF8C00" />

    <ProgressBar
        android1:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android1:layout_width="124dp"
        android1:layout_height="wrap_content" />

    <TextView
        android1:id="@+id/textView1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:text="Medium Text"
        android1:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android1:id="@+id/imageView1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:src="@drawable/cardverticallines" />

</LinearLayout>